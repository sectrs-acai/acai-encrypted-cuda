
EXECUTABLE := crypt

CU_FILES   := aes.cu

CU_DEPS    :=

CC_FILES   := crypt.c aes.c 

###########################################################

ARCH=$(shell uname | sed -e 's/-.*//g')

OBJDIR=objs
CXX=g++ -m64
CXXFLAGS=-O3 -Wall
ifeq ($(ARCH), Darwin)
# Building on mac
LDFLAGS=-L/usr/local/depot/cuda-6.5/lib/ -lcudart
else
# Building on Linux
LDFLAGS=-L/usr/local/depot/cuda-6.5/lib64/ -lcudart
endif
NVCC=nvcc
NVCCFLAGS=-O3 -m64


OBJS=$(OBJDIR)/crypt.o  $(OBJDIR)/aes_cuda.o $(OBJDIR)/aes.o 


.PHONY: dirs clean

default: $(EXECUTABLE)

dirs:
		mkdir -p $(OBJDIR)/

clean:
		rm -rf $(OBJDIR) *.ppm *~ $(EXECUTABLE)

$(EXECUTABLE): dirs $(OBJS)
		$(CXX) $(CXXFLAGS) -o $@ $(OBJS) $(LDFLAGS)

$(OBJDIR)/%.o: %.c
		$(CXX) $< $(CXXFLAGS) -c -o $@

$(OBJDIR)/%.o: %.cu
		$(NVCC) $< $(NVCCFLAGS) -c -o $@
